<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainncard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_alignParentEnd="true">
<LinearLayout
    android:layout_width="match_parent"
 android:orientation="vertical"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <ImageView
                android:id="@+id/siteImage"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/siteImage"
                android:text="Flipkart"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/siteTitle" />
            <ImageView
                android:id="@+id/fab"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/clipboard" />
        </RelativeLayout>



    <TextView
        android:id="@+id/couponDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="20% OFF On all Electronic Products"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/couponCode"
        android:text="FREE 100"
        android:textSize="30dp"
        android:background="@drawable/back"
        android:textColor="#4488F4"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/mainncard"
        android:layout_centerHorizontal="true" />

</LinearLayout>

        </android.support.v7.widget.CardView>


</LinearLayout>